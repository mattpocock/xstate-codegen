{
  "compilerOptions": {
    "types": ["node", "jest"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "outDir": "bin",
    "baseUrl": "src",
    "noEmitOnError": false,
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2020"]
  },
  "include": ["src"]
}
