{
  "name": "xstate-codegen-rfc",
  "version": "0.0.4",
  "private": true,
  "repository": "https://github.com/mattpocock/xstate-codegen",
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "x": "yarn workspace xstate-codegen",
    "build": "npm run build --prefix packages/xstate-compiled",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "ts-node": "9.0.0"
  }
}
